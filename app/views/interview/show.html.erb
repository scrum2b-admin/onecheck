<div class="container">
	<p style="font-size: 24px;color: #0077B3"><%= @interview.title%></p>
	<p style="font-size: 15px;">Start Date:<%= @interview.start_date.strftime("%m/%d/%Y")%></p>
	<p style="font-size: 15px;">Due Date:<%= @interview.due_date.strftime("%m/%d/%Y")%></p>
	<p style="font-size: 15px;">Time Test:<%= @interview.time_test %></p>
	<% @questions.each_with_index do |question, index| %>
	    <p style="font-size: 15px;color: #0077B3;margin-top: 20px;">CÃ¢u<%= index + 1 %>:<%= question.content %></p>
	    <% question.answers.each do |answer| %>
	      <input type="checkbox" name="check_answer"/> <%= answer.content %><br />
	    <% end %>
	<% end %>
	<%= form_for Apply.new, :url =>'/apply/apply_interview' do |f| %>
	    <input type="hidden" name="apply[interview_id]" value="<%= @interview.id %>"/>
	    <%= f.submit 'Submit', :class =>'btn btn-primary', :id => 'submit_test', :style =>'margin-top: 50px' %>
	    <input type="submit" value="Cancel" class="btn" id="cancel_test"style="margin-top: 50px"/>  
	  
   <% end %>
</div>
